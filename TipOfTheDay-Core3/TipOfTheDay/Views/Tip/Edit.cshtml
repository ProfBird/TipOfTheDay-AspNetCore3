@model TipOfTheDay.Models.TipTagVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tip.TipID" />
            <div class="form-group">
                <label asp-for="Tip.TipText" class="control-label"></label>
                <input asp-for="Tip.TipText" class="form-control" />
                <span asp-validation-for="Tip.TipText" class="text-danger"></span>
            </div>

             Select a Tag<br />
            @{
                TagChoiceVM[] tagSelections = Model.TagSelections;
                for(int i = 0; i < tagSelections.Length; i++)
                {
                    <input type="checkbox" asp-for"tagSelections[i].Selected" />
                    <label asp-for"tagSelections[i].Tag.Category">@tagSelections[i].Category;</label>
                   <input type="hidden" asp-for"tagSelections[i].TagID" />
                     <br />
                }
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
       
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
